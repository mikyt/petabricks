    for(int j = 0; j < nbins.cell(0); j++) {
    	    int num_atoms_in_bin = (int) bin_sizes.cell(j);
    	    for (int k = 0; k < num_atoms_in_bin; k ++) {
     	    	int other_atom_i = bin_to_atom.cell(bin_index,k);
		delx = xtmp - x_atom.cell(other_atom_i,0);
		dely = ytmp - x_atom.cell(other_atom_i,1);
